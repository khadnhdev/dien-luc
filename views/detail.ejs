<%- include('header', { 
  title: 'Chi tiết Công ty Điện lực'
}) %>

<div class="container mt-4">
  <a href="/" class="btn btn-secondary mb-3">Quay lại</a>
  
  <h1>Chi tiết Công ty Điện lực</h1>
  
  <div class="mb-4">
    <div class="mb-3">
      <label class="form-label">Mã công ty</label>
      <p class="form-control-plaintext"><%= congty.id_cong_ty %></p>
    </div>
    <div class="mb-3">
      <label class="form-label">Tên công ty</label>
      <p class="form-control-plaintext"><%= congty.ten_cong_ty %></p>
    </div>
    <div class="mb-3">
      <label class="form-label">Khu vực</label>
      <p class="form-control-plaintext">
        <%= congty.zone === 'mien_bac' ? 'Miền Bắc' : 
           congty.zone === 'mien_trung' ? 'Miền Trung' : 'Miền Nam' %>
      </p>
    </div>
  </div>

  <h2>Danh sách công ty con</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Mã công ty con</th>
        <th>Tên công ty con</th>
        <th>Khu vực</th>
      </tr>
    </thead>
    <tbody>
      <% congtycon.forEach(function(con) { %>
        <tr>
          <td><%= con.ma_cong_ty_con %></td>
          <td><%= con.ten_cong_ty_con %></td>
          <td><%= con.zone %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 