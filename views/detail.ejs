<!DOCTYPE html>
<html>
<head>
  <title>Chi tiết Công ty Điện lực</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">EVN Manager</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Công ty điện lực</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/lich-cup-dien">Lịch cúp điện</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <a href="/" class="btn btn-secondary mb-3">Quay lại</a>
    
    <h1>Chi tiết Công ty Điện lực</h1>
    
    <form action="/update/<%= congty.id_cong_ty %>" method="POST" class="mb-4">
      <div class="mb-3">
        <label class="form-label">Mã công ty</label>
        <input type="text" class="form-control" value="<%= congty.id_cong_ty %>" readonly>
      </div>
      <div class="mb-3">
        <label class="form-label">Tên công ty</label>
        <input type="text" name="ten_cong_ty" class="form-control" value="<%= congty.ten_cong_ty %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Khu vực</label>
        <select name="zone" class="form-control">
          <option value="mien_bac" <%= congty.zone === 'mien_bac' ? 'selected' : '' %>>Miền Bắc</option>
          <option value="mien_trung" <%= congty.zone === 'mien_trung' ? 'selected' : '' %>>Miền Trung</option>
          <option value="mien_nam" <%= congty.zone === 'mien_nam' ? 'selected' : '' %>>Miền Nam</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>

    <h2>Danh sách công ty con</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Mã công ty con</th>
          <th>Tên công ty con</th>
          <th>Khu vực</th>
        </tr>
      </thead>
      <tbody>
        <% congtycon.forEach(function(con) { %>
          <tr>
            <td><%= con.ma_cong_ty_con %></td>
            <td><%= con.ten_cong_ty_con %></td>
            <td><%= con.zone %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 