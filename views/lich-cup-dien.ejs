<%- include('header', { 
  title: 'Lịch Cúp Điện',
  customStyles: `
    /* Responsive container */
    @media (max-width: 768px) {
      .container {
        padding-left: 10px;
        padding-right: 10px;
      }
    }
    
    /* Stats card */
    .stats-card {
      background: linear-gradient(135deg, #fff, #f8f9fa);
      border-radius: 20px;
      padding: 2.5rem;
      box-shadow: 0 10px 30px rgba(0,0,0,.05);
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
    }
    
    @media (max-width: 768px) {
      .stats-card {
        padding: 1.5rem;
        text-align: center;
      }
      
      .stats-info {
        margin-top: 1rem;
        text-align: center;
      }
    }
    
    .hero-title {
      font-size: 2.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, var(--primary-color), #0143a3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
      color: #6c757d;
      margin-bottom: 1.5rem;
    }
    
    .stats-number {
      font-size: 1.5rem;
      font-weight: 600;
      color: #0143a3;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .stats-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 110, 253, 0.1);
      border-radius: 12px;
      color: var(--primary-color);
    }
    
    .filter-section {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
      margin-bottom: 2rem;
    }
    
    .filter-row {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      align-items: flex-end;
    }
    
    .filter-item {
      flex: 1;
      min-width: 200px;
    }
    
    .filter-buttons {
      display: flex;
      gap: 0.5rem;
    }
    
    @media (max-width: 768px) {
      .filter-section {
        padding: 1rem;
      }
      
      .filter-item {
        min-width: 100%;
      }
      
      .filter-buttons {
        width: 100%;
        justify-content: space-between;
      }
      
      .filter-buttons .btn {
        flex: 1;
      }
    }
    
    .table td {
      vertical-align: middle;
      max-width: 300px;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .reason-cell {
      font-size: 0.95rem;
      line-height: 1.4;
    }
    
    .text-wrap {
      white-space: normal !important;
    }
    
    .table th {
      background: #f8f9fa;
      font-weight: 600;
      white-space: nowrap;
    }
    
    .table-container {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
    }
    
    @media (max-width: 992px) {
      .table-container {
        padding: 1rem;
      }
      
      .table {
        display: block;
        width: 100%;
        overflow-x: auto;
      }
      
      .table td, .table th {
        min-width: 120px;
        max-width: none;
      }
      
      .table td:first-child {
        position: sticky;
        left: 0;
        background: white;
        z-index: 1;
      }
    }
    
    .pagination {
      margin-top: 2rem;
    }
    
    .form-select, .form-control {
      border-radius: 8px;
      border-color: #e9ecef;
    }
    
    .form-select:focus, .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
    
    /* Grid system */
    .grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }
    
    @media (max-width: 768px) {
      .grid-container {
        grid-template-columns: 1fr;
      }
    }
    
    .grid-item {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
      transition: transform 0.2s;
    }
    
    .grid-item:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,.1);
    }
    
    .grid-item-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }
    
    .grid-item-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 110, 253, 0.1);
      border-radius: 12px;
      color: var(--primary-color);
      font-size: 1.2rem;
    }
    
    .grid-item-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0;
    }
    
    .grid-item-content {
      color: #6c757d;
    }
    
    /* Responsive table styles */
    @media (max-width: 768px) {
      .table-responsive {
        border: 0;
      }
      
      .table {
        display: block;
      }
      
      .table thead {
        display: none;
      }
      
      .table tbody {
        display: block;
      }
      
      .table tr {
        display: block;
        background: white;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 4px rgba(0,0,0,.05);
        padding: 1rem;
      }
      
      .table td {
        display: block;
        text-align: left;
        padding: 0.5rem 0;
        border: none;
      }
      
      .table td:not(:last-child) {
        border-bottom: 1px solid #eee;
      }
      
      /* Add labels before content */
      .table td::before {
        content: attr(data-label);
        font-weight: 600;
        color: #6c757d;
        display: block;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
      }
      
      /* Special styling for reason cell */
      .reason-cell {
        margin-top: 0.5rem;
        padding-top: 0.5rem !important;
        border-top: 2px solid #f0f0f0 !important;
      }
      
      .reason-cell::before {
        margin-bottom: 0.5rem;
      }
    }
  `
}) %>

<body>
  <div class="container mt-4">
    <!-- Stats Section -->
    <div class="stats-card">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="hero-title">Lịch Cúp Điện</h1>
          <p class="hero-subtitle">
            Tra cứu thông tin cúp điện mới nhất từ các công ty điện lực trên toàn quốc
          </p>
        </div>
        <div class="col-md-4 text-md-end stats-info">
          <% if (currentZone && capNhatGanNhat) { %>
            <div class="text-muted mb-2">Cập nhật lần cuối:</div>
            <div class="stats-number">
              <span class="stats-icon">
                <i class="bi bi-clock-history"></i>
              </span>
              <%= new Date(capNhatGanNhat.thoi_gian_ket_thuc).toLocaleString('vi-VN') %>
            </div>
            <div class="text-muted mt-2">
              <span class="stats-icon">
                <i class="bi bi-lightning"></i>
              </span>
              <%= capNhatGanNhat.so_lich_cup_dien %> lịch cúp điện
            </div>
          <% } else { %>
            <div class="text-muted">
              <span class="stats-icon">
                <i class="bi bi-info-circle"></i>
              </span>
              Chọn khu vực để xem thông tin cập nhật
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Notification Banner -->
    <% if (!locals.user) { %>
      <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>
        <div>
          Đăng nhập để nhận thông báo qua email khi có lịch cúp điện mới tại khu vực bạn quan tâm
          <a href="/login" class="btn btn-outline-primary btn-sm ms-3">
            <i class="bi bi-google"></i> Đăng nhập với Google
          </a>
        </div>
      </div>
    <% } %>

    <!-- Quick Stats Grid -->
    <div class="grid-container">
      <!-- Khu vực -->
      <div class="grid-item">
        <div class="grid-item-header">
          <div class="grid-item-icon">
            <i class="bi bi-geo-alt"></i>
          </div>
          <h3 class="grid-item-title">Khu vực</h3>
        </div>
        <div class="grid-item-content">
          <% if (currentZone) { %>
            <%= currentZone === 'mien_bac' ? 'Miền Bắc' : 
                currentZone === 'mien_trung' ? 'Miền Trung' : 'Miền Nam' %>
          <% } else { %>
            Chưa chọn khu vực
          <% } %>
        </div>
      </div>

      <!-- Công ty điện lực -->
      <div class="grid-item">
        <div class="grid-item-header">
          <div class="grid-item-icon">
            <i class="bi bi-building"></i>
          </div>
          <h3 class="grid-item-title">Công ty điện lực</h3>
        </div>
        <div class="grid-item-content">
          <%= currentMaDienLuc ? congTyList.find(ct => ct.ma_dien_luc === currentMaDienLuc)?.ten_dien_luc : 'Tất cả' %>
        </div>
      </div>

      <!-- Điện lực -->
      <div class="grid-item">
        <div class="grid-item-header">
          <div class="grid-item-icon">
            <i class="bi bi-lightning"></i>
          </div>
          <h3 class="grid-item-title">Điện lực</h3>
        </div>
        <div class="grid-item-content">
          <%= currentMaCongTyCon ? congTyConList.find(ct => ct.ma_cong_ty_con === currentMaCongTyCon)?.ten_cong_ty_con : 'Tất cả' %>
        </div>
      </div>

      <!-- Thời gian -->
      <div class="grid-item">
        <div class="grid-item-header">
          <div class="grid-item-icon">
            <i class="bi bi-calendar-event"></i>
          </div>
          <h3 class="grid-item-title">Ngày tra cứu</h3>
        </div>
        <div class="grid-item-content">
          <%= currentDate ? new Date(currentDate).toLocaleDateString('vi-VN') : 'Tất cả' %>
        </div>
      </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
      <h5 class="mb-3"><i class="bi bi-funnel"></i> Bộ lọc tìm kiếm</h5>
      <form id="filterForm">
        <div class="filter-row">
          <div class="filter-item">
            <label class="form-label">Khu vực</label>
            <select name="zone" class="form-select" onchange="onZoneChange(this)">
              <option value="">Tất cả khu vực</option>
              <option value="mien_bac" <%= currentZone === 'mien_bac' ? 'selected' : '' %>>Miền Bắc</option>
              <option value="mien_trung" <%= currentZone === 'mien_trung' ? 'selected' : '' %>>Miền Trung</option>
              <option value="mien_nam" <%= currentZone === 'mien_nam' ? 'selected' : '' %>>Miền Nam</option>
            </select>
          </div>
          <div class="filter-item">
            <label class="form-label">Công ty điện lực</label>
            <select name="ma_dien_luc" class="form-select" onchange="onCongTyChange(this)" <%= !currentZone ? 'disabled' : '' %>>
              <option value="">Tất cả công ty điện lực</option>
              <% congTyList.forEach(function(congTy) { %>
                <option value="<%= congTy.ma_dien_luc %>" 
                  <%= currentMaDienLuc === congTy.ma_dien_luc ? 'selected' : '' %>
                  data-zone="<%= congTy.zone %>">
                  <%= congTy.ten_dien_luc %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="filter-item">
            <label class="form-label">Điện lực</label>
            <select name="ma_cong_ty_con" class="form-select" onchange="this.form.submit()" <%= !currentMaDienLuc ? 'disabled' : '' %>>
              <option value="">Tất cả điện lực</option>
              <% congTyConList.forEach(function(congTyCon) { %>
                <option value="<%= congTyCon.ma_cong_ty_con %>" 
                  <%= currentMaCongTyCon === congTyCon.ma_cong_ty_con ? 'selected' : '' %>>
                  <%= congTyCon.ten_cong_ty_con %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="filter-item">
            <label class="form-label">Ngày</label>
            <input type="date" name="date" class="form-control" value="<%= currentDate %>" onchange="this.form.submit()">
          </div>
          <div class="filter-buttons">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-search"></i> Lọc
            </button>
            <a href="/lich-cup-dien" class="btn btn-outline-secondary">
              <i class="bi bi-x-circle"></i> Xóa bộ lọc
            </a>
          </div>
        </div>
      </form>
    </div>

    <!-- Table Section -->
    <div class="table-container">
      <div class="table-responsive">
        <% if (!currentZone) { %>
          <div class="text-center py-5">
            <i class="bi bi-geo-alt text-muted" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Vui lòng chọn khu vực để tra cứu</h4>
            <p class="text-muted">
              Chọn khu vực từ bộ lọc phía trên để xem lịch cúp điện
            </p>
          </div>
        <% } else { %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>STT</th>
                <th>Công ty điện lực</th>
                <th>Điện lực</th>
                <th>Thời gian bắt đầu</th>
                <th>Thời gian kết thúc</th>
                <th>Khu vực</th>
                <th style="width: 30%">Lý do</th>
              </tr>
            </thead>
            <tbody>
              <% if (lichCupDien.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2">Không có dữ liệu</p>
                  </td>
                </tr>
              <% } else { %>
                <% lichCupDien.forEach(function(item, index) { %>
                  <tr>
                    <td data-label="STT"><%= index + 1 %></td>
                    <td data-label="Công ty điện lực"><%= item.ten_dien_luc %></td>
                    <td data-label="Điện lực"><%= item.ten_cong_ty_con %></td>
                    <td data-label="Thời gian bắt đầu"><%= new Date(item.thoi_gian_bat_dau).toLocaleString('vi-VN') %></td>
                    <td data-label="Thời gian kết thúc"><%= new Date(item.thoi_gian_ket_thuc).toLocaleString('vi-VN') %></td>
                    <td data-label="Khu vực"><%= item.khu_vuc %></td>
                    <td data-label="Lý do" class="reason-cell text-wrap">
                      <% if (item.ten_tram) { %>
                        <small class="text-muted d-block mb-1">Trạm: <%= item.ten_tram %></small>
                      <% } %>
                      <%= item.ly_do %>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        <% } %>
      </div>

      <% if (pagination.totalPages > 1) { %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="<%= getPageUrl(pagination.page - 1) %>">
                <i class="bi bi-chevron-left"></i>
              </a>
            </li>

            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
              <% if (
                i === 1 || 
                i === pagination.totalPages || 
                (i >= pagination.page - 2 && i <= pagination.page + 2)
              ) { %>
                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                  <a class="page-link" href="<%= getPageUrl(i) %>"><%= i %></a>
                </li>
              <% } else if (
                i === pagination.page - 3 || 
                i === pagination.page + 3
              ) { %>
                <li class="page-item disabled">
                  <span class="page-link">...</span>
                </li>
              <% } %>
            <% } %>

            <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="<%= getPageUrl(pagination.page + 1) %>">
                <i class="bi bi-chevron-right"></i>
              </a>
            </li>
          </ul>
        </nav>

        <div class="text-center text-muted mt-3">
          Hiển thị <%= lichCupDien.length %> / <%= pagination.totalItems %> lịch cúp điện
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  function onZoneChange(select) {
    const form = document.getElementById('filterForm');
    const congTySelect = form.querySelector('[name="ma_dien_luc"]');
    const congTyConSelect = form.querySelector('[name="ma_cong_ty_con"]');
    
    // Reset và disable các select phía sau
    congTySelect.value = '';
    congTyConSelect.value = '';
    
    congTySelect.disabled = !select.value;
    congTyConSelect.disabled = true;
    
    if (select.value) {
      form.submit();
    }
  }

  function onCongTyChange(select) {
    const form = document.getElementById('filterForm');
    const congTyConSelect = form.querySelector('[name="ma_cong_ty_con"]');
    
    // Reset và enable/disable select công ty con
    congTyConSelect.value = '';
    congTyConSelect.disabled = !select.value;
    
    form.submit();
  }
  </script>
</body>
</html> 