<%- include('header', { 
  title: 'Lịch Cúp Điện',
  customStyles: `
    /* Responsive container */
    @media (max-width: 768px) {
      .container {
        padding-left: 10px;
        padding-right: 10px;
      }
    }
    
    /* Stats card */
    .stats-card {
      background: linear-gradient(135deg, #fff, #f8f9fa);
      border-radius: 20px;
      padding: 2.5rem;
      box-shadow: 0 10px 30px rgba(0,0,0,.05);
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
    }
    
    @media (max-width: 768px) {
      .stats-card {
        padding: 1.5rem;
        text-align: center;
      }
      
      .stats-info {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
      }
    }
    
    .hero-title {
      font-size: 2.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, var(--primary-color), #0143a3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
      color: #6c757d;
      margin-bottom: 1.5rem;
    }
    
    .stats-number {
      font-size: 1.5rem;
      font-weight: 600;
      color: #0143a3;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .stats-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 110, 253, 0.1);
      border-radius: 12px;
      color: var(--primary-color);
    }
    
    .filter-section {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
      margin-bottom: 2rem;
    }
    
    .filter-row {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      align-items: flex-end;
    }
    
    .filter-item {
      flex: 1;
      min-width: 200px;
    }
    
    .filter-buttons {
      display: flex;
      gap: 0.5rem;
    }
    
    @media (max-width: 768px) {
      .filter-section {
        padding: 1rem;
      }
      
      .filter-item {
        min-width: 100%;
      }
      
      .filter-buttons {
        width: 100%;
        justify-content: space-between;
      }
      
      .filter-buttons .btn {
        flex: 1;
      }
    }
    
    .table td {
      vertical-align: middle;
      max-width: 300px;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .reason-cell {
      font-size: 0.95rem;
      line-height: 1.4;
    }
    
    .text-wrap {
      white-space: normal !important;
    }
    
    .table th {
      background: #f8f9fa;
      font-weight: 600;
      white-space: nowrap;
    }
    
    .table-container {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
    }
    
    @media (max-width: 992px) {
      .table-container {
        padding: 1rem;
      }
      
      .table {
        display: block;
        width: 100%;
        overflow-x: auto;
      }
      
      .table td, .table th {
        min-width: 120px;
        max-width: none;
      }
      
      .table td:first-child {
        position: sticky;
        left: 0;
        background: white;
        z-index: 1;
      }
    }
    
    .pagination {
      margin-top: 2rem;
    }
    
    .form-select, .form-control {
      border-radius: 8px;
      border-color: #e9ecef;
    }
    
    .form-select:focus, .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
    
    /* Grid system */
    .grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }
    
    @media (max-width: 768px) {
      .grid-container {
        grid-template-columns: 1fr;
      }
    }
    
    .grid-item {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
      transition: all 0.2s;
    }
    
    .grid-item:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,.1);
    }
    
    .grid-item-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }
    
    .grid-item-icon {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 110, 253, 0.1);
      border-radius: 12px;
      color: var(--primary-color);
      font-size: 1.2rem;
    }
    
    .grid-item-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0;
    }
    
    .grid-item-content {
      color: #6c757d;
    }
    
    /* Responsive table styles */
    @media (max-width: 768px) {
      .table-responsive {
        border: 0;
      }
      
      .table {
        display: block;
      }
      
      .table thead {
        display: none;
      }
      
      .table tbody {
        display: block;
      }
      
      .table tr {
        display: block;
        background: white;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 4px rgba(0,0,0,.05);
        padding: 1rem;
      }
      
      .table td {
        display: block;
        text-align: left;
        padding: 0.5rem 0;
        border: none;
      }
      
      .table td:not(:last-child) {
        border-bottom: 1px solid #eee;
      }
      
      /* Add labels before content */
      .table td::before {
        content: attr(data-label);
        font-weight: 600;
        color: #6c757d;
        display: block;
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
      }
      
      /* Special styling for reason cell */
      .reason-cell {
        margin-top: 0.5rem;
        padding-top: 0.5rem !important;
        border-top: 2px solid #f0f0f0 !important;
      }
      
      .reason-cell::before {
        margin-bottom: 0.5rem;
      }
    }
    
    /* Grid card styles */
    .grid-item {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
      transition: all 0.2s;
    }
    
    .grid-item:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0,0,0,.1);
    }
    
    @media (max-width: 768px) {
      .grid-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 0.5rem;
      }
      
      .grid-item {
        padding: 1.25rem;
        border-left: 4px solid var(--primary-color);
      }
      
      .grid-item-header {
        margin-bottom: 0.75rem;
      }
      
      .grid-item-title {
        font-size: 1rem;
      }
      
      .grid-item-content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .grid-item-content > div {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      
      .grid-item-icon {
        width: 32px;
        height: 32px;
        font-size: 1rem;
      }
    }
    
    /* Data card styles */
    .data-cards {
      display: none;
    }
    
    .data-card {
      background: white;
      border-radius: 12px;
      padding: 1rem 1.25rem;
      margin-bottom: 1rem;
      box-shadow: 0 2px 4px rgba(0,0,0,.05);
      border: 1px solid #edf2f7;
      transition: all 0.2s;
    }
    
    .data-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(0,0,0,.1);
    }
    
    .data-card-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.75rem;
    }
    
    .data-card-company {
      font-weight: 600;
      color: #2d3436;
      font-size: 1rem;
      line-height: 1.2;
    }
    
    .data-card-content {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .data-card-item {
      display: flex;
      align-items: flex-start;
      gap: 0.75rem;
      flex: 1;
      min-width: 200px;
    }
    
    .data-card-icon {
      width: 28px;
      height: 28px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(13, 110, 253, 0.1);
      border-radius: 8px;
      color: var(--primary-color);
      flex-shrink: 0;
      font-size: 0.9rem;
    }
    
    .data-card-text {
      flex: 1;
      font-size: 0.9rem;
      line-height: 1.5;
    }
    
    .data-card-label {
      display: block;
      font-size: 0.8rem;
      color: #6c757d;
      margin-bottom: 0.2rem;
    }
    
    /* Mobile styles */
    @media (max-width: 768px) {
      .table-responsive {
        display: none;
      }
      
      .data-cards {
        display: block;
      }
      
      .data-card {
        padding: 0.75rem 1rem;
        margin-bottom: 0.75rem;
      }
      
      .data-card-header {
        margin-bottom: 0.5rem;
      }
      
      .data-card-content {
        flex-direction: column;
        gap: 0.75rem;
      }
      
      .data-card-item {
        min-width: 100%;
      }
      
      .data-card-icon {
        width: 24px;
        height: 24px;
        font-size: 0.8rem;
      }
      
      /* Thêm border color theo trạng thái */
      .data-card {
        border-left: 3px solid;
      }
      
      .data-card.active {
        border-left-color: #28a745;
      }
      
      .data-card.pending {
        border-left-color: #ffc107;
      }
      
      /* Tối ưu hiển thị thời gian */
      .data-card-time {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }
      
      .data-card-time span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      
      .data-card-time i {
        color: #6c757d;
        font-size: 0.8rem;
      }
    }
    
    /* Stats styles */
    .stats-info {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.5rem;
    }
    
    .stats-update {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }
    
    .stats-update-time {
      font-size: 1.25rem;
      font-weight: 600;
      color: #0143a3;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .stats-update-count {
      margin-top: 0.5rem;
      color: #6c757d;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
  `
}) %>

<body>
  <div class="container mt-4">
    <!-- Stats Section -->
    <div class="stats-card">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h1 class="hero-title">Lịch Cúp Điện</h1>
          <p class="hero-subtitle">
            Tra cứu thông tin cúp điện mới nhất từ các công ty điện lực trên toàn quốc
          </p>
        </div>
        <div class="col-md-4 text-md-end stats-info">
          <% if (currentZone && capNhatGanNhat) { %>
            <div class="stats-update">
              <div class="text-muted">Cập nhật lần cuối:</div>
              <div class="stats-update-time">
                <span class="stats-icon">
                  <i class="bi bi-clock-history"></i>
                </span>
                <%= new Date(capNhatGanNhat.thoi_gian_ket_thuc).toLocaleString('vi-VN') %>
              </div>
              <div class="stats-update-count">
                <span class="stats-icon">
                  <i class="bi bi-lightning"></i>
                </span>
                <%= capNhatGanNhat.so_lich_cup_dien %> lịch cúp điện
              </div>
            </div>
          <% } else { %>
            <div class="text-muted">
              <span class="stats-icon">
                <i class="bi bi-info-circle"></i>
              </span>
              Chọn khu vực để xem thông tin cập nhật
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Notification Banner -->
    <% if (!locals.user) { %>
      <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i>
        <div>
          Đăng nhập để nhận thông báo qua email khi có lịch cúp điện mới tại khu vực bạn quan tâm
          <a href="/login" class="btn btn-outline-primary btn-sm ms-3">
            <i class="bi bi-google"></i> Đăng nhập với Google
          </a>
        </div>
      </div>
    <% } %>

   

    <!-- Filter Section -->
    <div class="filter-section">
      <h5 class="mb-3"><i class="bi bi-funnel"></i> Bộ lọc tìm kiếm</h5>
      <form id="filterForm">
        <div class="filter-row">
          <div class="filter-item">
            <label class="form-label">Khu vực</label>
            <select name="zone" class="form-select" onchange="onZoneChange(this)">
              <option value="">Tất cả khu vực</option>
              <option value="mien_bac" <%= currentZone === 'mien_bac' ? 'selected' : '' %>>Miền Bắc</option>
              <option value="mien_trung" <%= currentZone === 'mien_trung' ? 'selected' : '' %>>Miền Trung</option>
              <option value="mien_nam" <%= currentZone === 'mien_nam' ? 'selected' : '' %>>Miền Nam</option>
            </select>
          </div>
          <div class="filter-item">
            <label class="form-label">Công ty điện lực</label>
            <select name="ma_dien_luc" class="form-select" onchange="onCongTyChange(this)" <%= !currentZone ? 'disabled' : '' %>>
              <option value="">Tất cả công ty điện lực</option>
              <% congTyList.forEach(function(congTy) { %>
                <option value="<%= congTy.ma_dien_luc %>" 
                  <%= currentMaDienLuc === congTy.ma_dien_luc ? 'selected' : '' %>
                  data-zone="<%= congTy.zone %>">
                  <%= congTy.ten_dien_luc %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="filter-item">
            <label class="form-label">Điện lực</label>
            <select name="ma_cong_ty_con" class="form-select" onchange="this.form.submit()" <%= !currentMaDienLuc ? 'disabled' : '' %>>
              <option value="">Tất cả điện lực</option>
              <% congTyConList.forEach(function(congTyCon) { %>
                <option value="<%= congTyCon.ma_cong_ty_con %>" 
                  <%= currentMaCongTyCon === congTyCon.ma_cong_ty_con ? 'selected' : '' %>>
                  <%= congTyCon.ten_cong_ty_con %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="filter-item">
            <label class="form-label">Ngày</label>
            <input type="date" name="date" class="form-control" value="<%= currentDate %>" onchange="this.form.submit()">
          </div>
          <div class="filter-buttons">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-search"></i> Lọc
            </button>
            <a href="/lich-cup-dien" class="btn btn-outline-secondary">
              <i class="bi bi-x-circle"></i> Xóa bộ lọc
            </a>
          </div>
        </div>
      </form>
    </div>

    <!-- Table Section -->
    <div class="table-container">
      <% if (!currentZone) { %>
        <div class="text-center py-5">
          <i class="bi bi-geo-alt text-muted" style="font-size: 3rem;"></i>
          <h4 class="mt-3">Vui lòng chọn khu vực để tra cứu</h4>
          <p class="text-muted">
            Chọn khu vực từ bộ lọc phía trên để xem lịch cúp điện
          </p>
        </div>
      <% } else { %>
        <!-- Desktop Table View -->
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>STT</th>
                <th>Công ty điện lực</th>
                <th>Điện lực</th>
                <th>Thời gian bắt đầu</th>
                <th>Thời gian kết thúc</th>
                <th>Khu vực</th>
                <th style="width: 30%">Lý do</th>
              </tr>
            </thead>
            <tbody>
              <% if (lichCupDien.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2">Không có dữ liệu</p>
                  </td>
                </tr>
              <% } else { %>
                <% lichCupDien.forEach(function(item, index) { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.ten_dien_luc %></td>
                    <td><%= item.ten_cong_ty_con %></td>
                    <td><%= new Date(item.thoi_gian_bat_dau).toLocaleString('vi-VN') %></td>
                    <td><%= new Date(item.thoi_gian_ket_thuc).toLocaleString('vi-VN') %></td>
                    <td><%= item.khu_vuc %></td>
                    <td class="reason-cell text-wrap">
                      <% if (item.ten_tram) { %>
                        <small class="text-muted d-block mb-1">Trạm: <%= item.ten_tram %></small>
                      <% } %>
                      <%= item.ly_do %>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Mobile Card View -->
        <div class="data-cards">
          <% if (lichCupDien.length === 0) { %>
            <div class="text-center py-5">
              <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
              <p class="text-muted mt-2">Không có dữ liệu</p>
            </div>
          <% } else { %>
            <% lichCupDien.forEach(function(item, index) { %>
              <div class="data-card <%= new Date(item.thoi_gian_ket_thuc) < new Date() ? 'active' : 'pending' %>">
                <div class="data-card-header">
                  <div class="data-card-icon">
                    <i class="bi bi-building"></i>
                  </div>
                  <div>
                    <div class="data-card-company"><%= item.ten_dien_luc %></div>
                    <small class="text-muted"><%= item.ten_cong_ty_con %></small>
                  </div>
                </div>
                <div class="data-card-content">
                  <div class="data-card-item">
                    <div class="data-card-icon">
                      <i class="bi bi-clock"></i>
                    </div>
                    <div class="data-card-text data-card-time">
                      <span class="data-card-label">Thời gian</span>
                      <span>
                        <i class="bi bi-arrow-right-circle"></i>
                        Bắt đầu: <%= new Date(item.thoi_gian_bat_dau).toLocaleString('vi-VN') %>
                      </span>
                      <span>
                        <i class="bi bi-arrow-left-circle"></i>
                        Kết thúc: <%= new Date(item.thoi_gian_ket_thuc).toLocaleString('vi-VN') %>
                      </span>
                    </div>
                  </div>
                  <div class="data-card-item">
                    <div class="data-card-icon">
                      <i class="bi bi-geo-alt"></i>
                    </div>
                    <div class="data-card-text">
                      <span class="data-card-label">Khu vực</span>
                      <%= item.khu_vuc %>
                    </div>
                  </div>
                  <div class="data-card-item">
                    <div class="data-card-icon">
                      <i class="bi bi-info-circle"></i>
                    </div>
                    <div class="data-card-text">
                      <span class="data-card-label">Lý do</span>
                      <% if (item.ten_tram) { %>
                        <small class="text-muted d-block mb-1">
                          <i class="bi bi-lightning me-1"></i>Trạm: <%= item.ten_tram %>
                        </small>
                      <% } %>
                      <%= item.ly_do %>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } %>
        </div>
      <% } %>

      <% if (pagination.totalPages > 1) { %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="<%= getPageUrl(pagination.page - 1) %>">
                <i class="bi bi-chevron-left"></i>
              </a>
            </li>

            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
              <% if (
                i === 1 || 
                i === pagination.totalPages || 
                (i >= pagination.page - 2 && i <= pagination.page + 2)
              ) { %>
                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                  <a class="page-link" href="<%= getPageUrl(i) %>"><%= i %></a>
                </li>
              <% } else if (
                i === pagination.page - 3 || 
                i === pagination.page + 3
              ) { %>
                <li class="page-item disabled">
                  <span class="page-link">...</span>
                </li>
              <% } %>
            <% } %>

            <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="<%= getPageUrl(pagination.page + 1) %>">
                <i class="bi bi-chevron-right"></i>
              </a>
            </li>
          </ul>
        </nav>

        <div class="text-center text-muted mt-3">
          Hiển thị <%= lichCupDien.length %> / <%= pagination.totalItems %> lịch cúp điện
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  function onZoneChange(select) {
    const form = document.getElementById('filterForm');
    const congTySelect = form.querySelector('[name="ma_dien_luc"]');
    const congTyConSelect = form.querySelector('[name="ma_cong_ty_con"]');
    
    // Reset và disable các select phía sau
    congTySelect.value = '';
    congTyConSelect.value = '';
    
    congTySelect.disabled = !select.value;
    congTyConSelect.disabled = true;
    
    if (select.value) {
      form.submit();
    }
  }

