    }

    .source-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .source-icon {
      width: 64px;
      height: 64px;
      background: var(--primary-color);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2rem;
    }

    .source-title {
      margin: 0;
      font-size: 1.5rem;
      color: var(--primary-color);
    }

    .source-subtitle {
      color: #6c757d;
      margin: 0;
    }

    .source-content {
      color: #495057;
      line-height: 1.6;
    }

    .source-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--primary-color);
      text-decoration: none;
      margin-top: 1rem;
      font-weight: 500;
    }

    .source-link:hover {
      text-decoration: underline;
    }

    .disclaimer {
      background: #f8f9fa;
