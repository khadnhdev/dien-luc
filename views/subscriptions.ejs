  <script>
    // Modal instance
    let addModal;
    
    // Initialize when document is ready
    document.addEventListener('DOMContentLoaded', function() {
      addModal = new bootstrap.Modal(document.getElementById('addSubscriptionModal'));
    });
    
    // Show add subscription modal
    function showAddModal() {
      addModal.show();
    }
    
    // Handle zone selection
    function onZoneChange(select) {
      const zone = select.value;
      const companySelect = document.querySelector('select[name="ma_dien_luc"]');
      const subCompanySelect = document.querySelector('select[name="ma_cong_ty_con"]');
      
      // Reset and disable dependent selects
      companySelect.value = '';
      subCompanySelect.value = '';
      
      companySelect.disabled = !zone;
      subCompanySelect.disabled = true;
      
      // Filter companies by zone
      Array.from(companySelect.options).forEach(option => {
        if (option.dataset.zone) {
          option.style.display = option.dataset.zone === zone ? '' : 'none';
        }
      });
    }
    
    // Handle company selection
    function onCompanyChange(select) {
      const companyId = select.value;
      const subCompanySelect = document.querySelector('select[name="ma_cong_ty_con"]');
      
      // Reset and enable/disable sub-company select
      subCompanySelect.value = '';
      subCompanySelect.disabled = !companyId;
      
      // Filter sub-companies by parent company
      Array.from(subCompanySelect.options).forEach(option => {
        if (option.dataset.parent) {
          option.style.display = option.dataset.parent === companyId ? '' : 'none';
        }
      });
    }
    
    // Toggle developer mode
    function toggleDevMode() {
      const devContent = document.getElementById('devContent');
      const devHeader = document.querySelector('.dev-header');
      
      if (devContent.style.display === 'none') {
        devContent.style.display = 'block';
        devHeader.classList.remove('collapsed');
      } else {
        devContent.style.display = 'none';
        devHeader.classList.add('collapsed');
      }
    }

    function confirmDelete(id, name) {
      if (confirm(`Bạn có chắc chắn muốn hủy theo dõi "${name}"?`)) {
        document.getElementById(`delete-form-${id}`).submit();
      }
    }

    async function handleSubmit(event) {
      event.preventDefault();
      const form = event.target;
      const formData = new FormData(form);
      const errorDiv = document.getElementById('formError');
      
      try {
        const response = await fetch('/subscriptions', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(Object.fromEntries(formData))
        });
        
        const data = await response.json();
        
        if (!response.ok) {
          errorDiv.textContent = data.error;
          errorDiv.classList.remove('d-none');
          return false;
        }
        
        // Thành công - reload trang
        window.location.reload();
        return false;
        
      } catch (error) {
        console.error('Error:', error);
        errorDiv.textContent = 'Có lỗi xảy ra, vui lòng thử lại';
        errorDiv.classList.remove('d-none');
        return false;
      }
    }
  </script>
