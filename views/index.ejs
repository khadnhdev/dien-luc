<!DOCTYPE html>
<html>
<head>
  <title>Quản lý Công ty Điện lực</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('navbar') %>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Danh sách Công ty Điện lực</h1>
      <a href="/lich-cup-dien" class="btn btn-primary">Xem lịch cúp điện</a>
    </div>
    
    <div class="mb-3">
      <a href="/" class="btn btn-outline-primary <%= !currentZone ? 'active' : '' %>">Tất cả</a>
      <a href="/?zone=mien_bac" class="btn btn-outline-primary <%= currentZone === 'mien_bac' ? 'active' : '' %>">Miền Bắc</a>
      <a href="/?zone=mien_trung" class="btn btn-outline-primary <%= currentZone === 'mien_trung' ? 'active' : '' %>">Miền Trung</a>
      <a href="/?zone=mien_nam" class="btn btn-outline-primary <%= currentZone === 'mien_nam' ? 'active' : '' %>">Miền Nam</a>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Mã công ty</th>
          <th>Tên công ty</th>
          <th>Khu vực</th>
          <th>Số công ty con</th>
          <th>Thao tác</th>
        </tr>
      </thead>
      <tbody>
        <% congty.forEach(function(cty) { %>
          <tr>
            <td><%= cty.id_cong_ty %></td>
            <td><%= cty.ten_cong_ty %></td>
            <td><%= cty.zone %></td>
            <td><%= cty.so_cong_ty_con %></td>
            <td>
              <a href="/congty/<%= cty.id_cong_ty %>" class="btn btn-sm btn-info">Chi tiết</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 